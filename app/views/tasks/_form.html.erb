<%= simple_form_for task, html: { class: "quote form" } do |f| %>
  <%= form_error_notification(task) %>

  <%= f.input :title, input_html: { autofocus: true } %>
  <%= f.input :content, input_html: { autofocus: true } %>
  <%= link_to "Cancel", quotes_path, class: "btn btn--light" %>
  <%= f.submit class: "btn btn--secondary" %>
<% end %>